<h1>Lugares</h1>
<div class="text-center">
  <div class="form-group ml-5 mr-5 ">
      <div class="row d-flex justify-content-center">
          <%= form_tag(lugares_path, :method => "get", class: "mx-auto") do %>
            <div class="d-flex justify-content-center">
                <h5 class="text-dark text-nowrap mr-3" >Haz tu BÃºsqueda:</h5>
                <%= text_field_tag :search, params[:search], placeholder: "Buscar Destinos...",:id => "query", :class=>"form-control" %>
                <%= submit_tag("Buscar", :class=>"btn btn-success text-wrap ml-2") %>
            </div>
          <% end %>
      </div>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lugares.each do |lugare| %>
      <tr>
        <td><%= lugare.nombre %></td>
        <td><%= lugare.descripcion %></td>
        <td><%= link_to 'Show', lugare %></td>
        <td><%= link_to 'Edit', edit_lugare_path(lugare) %></td>
        <td><%= link_to 'Destroy', lugare, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @lugares%>
<br>

<%= link_to 'New Lugare', new_lugare_path %>
